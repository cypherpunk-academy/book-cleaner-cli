{
    "name": "book-cleaner-cli",
    "version": "1.0.0",
    "description": "CLI tool for transforming raw book sources into clean, readable Markdown with comprehensive metadata",
    "main": "dist/index.js",
    "bin": {
        "clean-book": "dist/index.js"
    },
    "scripts": {
        "build": "swc src -d dist --config-file .swcrc",
        "build:watch": "swc src -d dist --config-file .swcrc --watch",
        "dev": "node -r @swc-node/register src/index.ts",
        "dev:watch": "node -r @swc-node/register --watch src/index.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "biome check .",
        "lint:fix": "biome check . --fix",
        "format": "biome format . --write",
        "clean": "rm -rf dist",
        "prepublishOnly": "npm run clean && npm run build"
    },
    "keywords": ["cli", "book", "text-processing", "pdf", "epub", "ocr", "markdown", "typescript"],
    "author": "Michael Schmidt",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.3.0",
        "cli-progress": "^3.12.0",
        "commander": "^12.0.0",
        "epub2": "^3.0.1",
        "glob": "^10.3.10",
        "js-yaml": "^4.1.0",
        "mammoth": "^1.6.0",
        "mime-types": "^2.1.35",
        "ora": "^8.0.1",
        "pdf-parse": "^1.1.1",
        "pino": "^8.17.2",
        "pino-pretty": "^10.3.1",
        "sharp": "^0.33.1",
        "tesseract.js": "^5.0.4"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.4.1",
        "@swc-node/register": "^1.10.10",
        "@swc/cli": "^0.7.8",
        "@swc/core": "^1.12.14",
        "@swc/jest": "^0.2.39",
        "@types/cli-progress": "^3.11.5",
        "@types/jest": "^29.5.11",
        "@types/js-yaml": "^4.0.9",
        "@types/mime-types": "^2.1.4",
        "@types/node": "^20.10.6",
        "@types/pdf-parse": "^1.1.4",
        "jest": "^29.7.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "files": ["dist/**/*", "README.md", "LICENSE"]
}
